{
  "name": "@sikessem/backend",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.0.29",
    "node": "prefer using bun",
    "npm": "prefer using bun",
    "pnpm": "prefer using bun",
    "yarn": "prefer using bun"
  },
  "packageManager": "bun@1.0.29",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://sikessem.com",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "dev@sikessem.com",
    "url": "https://sigui.deno.dev"
  },
  "scripts": {
    "apply": "bun run format.apply && bun run lint.apply",
    "check": "bun types && bun ci",
    "ci": "biome ci .",
    "format": "biome format .",
    "format.apply": "biome format --write .",
    "lint": "biome check .",
    "lint.apply": "biome check --apply-unsafe .",
    "serve": "bun run start.tsx",
    "start": "bun run --hot start.tsx",
    "types": "tsc --incremental --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.0",
    "@types/bun": "^1.0.8",
    "@types/node": "^20.11.25",
    "abi.js": "workspace:*",
    "typescript": "^5.4.2"
  }
}
