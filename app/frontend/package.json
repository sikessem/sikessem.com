{
  "name": "@sikessem.com/frontend",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.0.29",
    "node": "prefer using bun",
    "npm": "prefer using bun",
    "pnpm": "prefer using bun",
    "yarn": "prefer using bun"
  },
  "packageManager": "bun@1.0.29",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://sikessem.com",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "dev@sikessem.com",
    "url": "https://sigui.deno.dev"
  },
  "scripts": {
    "apply": "bun run format.apply && bun run lint.apply",
    "build": "rimraf out && qwik build && mkdir out && mv dist out && mv server out",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/deno/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "check": "bun run type && bun run ci",
    "ci": "biome ci .",
    "debug": "bun run check && bun run test",
    "deploy": "echo 'Run \"npm run qwik add\" to install a server adapter'",
    "dev": "vite --mode ssr",
    "dev.debug": "bun --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "format": "biome format .",
    "format.apply": "biome format --write .",
    "inspect": "bun --inspect-brk ./node_modules/vite/bin/vite.js --force",
    "lint": "biome check .",
    "lint.apply": "biome check --apply-unsafe .",
    "preview": "qwik build preview && vite preview --open",
    "start": "vite --open --mode ssr",
    "test": "bun run test.unit",
    "test.cov": "bun test --coverage",
    "test.hot": "bun test --hot",
    "test.unit": "bun test",
    "test.watch": "bun test --watch",
    "type": "tsc --incremental --noEmit",
    "qwik": "qwik"
  },
  "trustedDependencies": [
    "sharp"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@builder.io/qwik": "^1.4.5",
    "@builder.io/qwik-city": "^1.4.5",
    "@qwikest/icons": "^0.0.13",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.10",
    "@types/bun": "^1.0.7",
    "@types/node": "^20.11.20",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "rimraf": "^5.0.5",
    "styliz": "^0.0.2",
    "tailwindcss": "3.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-tsconfig-paths": "^4.3.1"
  }
}
