{
  "name": "sikessem.com",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.0.0",
    "node": "prefer using bun",
    "npm": "prefer using bun",
    "pnpm": "prefer using bun",
    "yarn": "prefer using bun"
  },
  "packageManager": "bun@1.0.26",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://sikessem.com",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "dev@sikessem.com",
    "url": "https://sigui.deno.dev"
  },
  "scripts": {
    "build": "tsc && vite build",
    "check": "bun run knip && bun run type && bun run ci",
    "ci": "biome ci .",
    "debug": "bun run check && bun run test",
    "e2e.install": "playwright install --with-deps",
    "e2e.report": "playwright show-report",
    "e2e.ui": "playwright test --ui",
    "fix": "bun run format.fix && bun run lint.fix && bun run knip.fix",
    "format": "biome format .",
    "format.fix": "biome format --write .",
    "inspect": "bun --inspect-brk ./node_modules/vite/bin/vite.js --force",
    "knip": "knip",
    "knip.fix": "knip --fix",
    "lint": "biome check .",
    "lint.fix": "biome check --apply-unsafe .",
    "start": "vite",
    "test": "bun run test.unit && bun run test.e2e",
    "test.e2e": "playwright test",
    "test.unit": "bun test",
    "test.cov": "bun test --coverage",
    "test.hot": "bun test --hot",
    "test.watch": "bun test --watch",
    "type": "tsc --incremental --noEmit",
    "qwik": "qwik"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@playwright/test": "^1.41.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.10",
    "@types/alpinejs": "^3.13.6",
    "@types/axios": "^0.14.0",
    "@types/bun": "^1.0.5",
    "@types/node": "^20.11.17",
    "alpinejs": "^3.13.5",
    "axios": "^1.6.7",
    "knip": "^5.0.1",
    "laravel-vite-plugin": "^1.0.1",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vite-tsconfig-paths": "^4.3.1"
  }
}
