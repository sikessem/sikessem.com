{
  "name": "sikessem.com",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.0.0",
    "node": "prefer using bun",
    "npm": "prefer using bun",
    "pnpm": "prefer using bun",
    "yarn": "prefer using bun"
  },
  "packageManager": "bun@1.0.26",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://sikessem.com",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "contact@sigui.ci",
    "url": "https://sigui.ci"
  },
  "scripts": {
    "check": "bun run knip && bun run type && bun run ci",
    "ci": "biome ci .",
    "debug": "bun run check && bun run test",
    "dev": "bun --bun vite",
    "e2e.install": "playwright install --with-deps",
    "e2e.report": "playwright show-report",
    "e2e.ui": "playwright test --ui",
    "fix": "bun run format && bun run lint",
    "format": "biome format .",
    "format.fix": "biome format --write .",
    "inspect": "bun --inspect-brk ./node_modules/vite/bin/vite.js --force",
    "knip": "knip",
    "knip.fix": "knip --fix",
    "lint": "biome check .",
    "lint.fix": "biome check --apply-unsafe .",
    "preview": "bun --bun vite preview --open",
    "start": "bun --bun vite --open",
    "test": "bun run test.unit && bun run test.e2e",
    "test.e2e": "playwright test",
    "test.unit": "bun test",
    "test.cov": "bun test --coverage",
    "test.hot": "bun test --hot",
    "test.watch": "bun test --watch",
    "type": "tsc --incremental --noEmit",
    "qwik": "bun --bun qwik"
  },
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@builder.io/qwik": "^1.4.4",
    "@playwright/test": "^1.41.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.10",
    "@types/bun": "^1.0.5",
    "@types/node": "^20.11.17",
    "autoprefixer": "^10.4.17",
    "knip": "^4.5.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vite-tsconfig-paths": "^4.3.1"
  }
}
