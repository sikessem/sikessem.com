{
  "name": "sikessem.com",
  "private": true,
  "type": "module",
  "engines": {
    "bun": ">=1.0.0",
    "node": "prefer using bun",
    "npm": "prefer using bun",
    "pnpm": "prefer using bun",
    "yarn": "prefer using bun"
  },
  "packageManager": "bun@1.0.21",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://sikessem.com",
  "author": {
    "name": "Sigui Kess√© Emmanuel",
    "email": "contact@sigui.ci",
    "url": "https://sigui.ci"
  },
  "scripts": {
    "build": "tsc && vite build",
    "check": "biome ci .",
    "check.format": "biome format .",
    "check.lint": "biome check .",
    "debug": "bun run check && bun run test && bun run e2e",
    "deploy": "echo 'Run \"npm run qwik add\" to install a server adapter'",
    "dev": "bun --bun vite",
    "dev.debug": "bun --inspect-brk ./node_modules/vite/bin/vite.js --force",
    "e2e": "playwright test",
    "e2e.install": "playwright install --with-deps",
    "e2e.report": "playwright show-report",
    "e2e.ui": "playwright test --ui",
    "fix": "bun run lint && bun run format",
    "format": "biome format --write .",
    "inspect": "bun --inspect-brk ./node_modules/vite/bin/vite.js --force",
    "preview": "bun --bun vite preview --open",
    "qwik": "qwik",
    "lint": "biome check --apply-unsafe .",
    "test": "bun test",
    "test.cov": "bun test --coverage",
    "test.hot": "bun test --hot",
    "test.watch": "bun test --watch",
    "start": "bun --bun vite --open"
  },
  "devDependencies": {
    "@alpinejs/focus": "^3.13.3",
    "@biomejs/biome": "^1.5.0",
    "@builder.io/qwik": "^1.3.2",
    "@playwright/test": "^1.40.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/nesting": "^0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.10",
    "@types/alpinejs": "^3.13.6",
    "@types/alpinejs__focus": "^3.13.3",
    "@types/node": "^20.10.7",
    "@types/node-fetch": "^2.6.10",
    "alpinejs": "^3.13.3",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.5",
    "bun-types": "^1.0.21",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.3",
    "laravel-vite-plugin": "^1.0.1",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.33",
    "postcss-import": "^16.0.0",
    "postcss-load-config": "^5.0.2",
    "postcss-nested": "^6.0.1",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-tsconfig-paths": "^4.2.3"
  }
}
