{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": [
    "./formatter.json",
    "./linter.json"
  ],
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "./tmp",
      "./node_modules",
      "./vendor",
      "./database",
      "./bootstrap",
      "./storage",
      "./public"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "overrides": [
    {
      "include": [".vscode/**"],
      "json": {
        "parser": {
          "allowComments": true
        }
      }
    }
  ]
}
